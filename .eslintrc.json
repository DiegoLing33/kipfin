{
    "env": {
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "@vue/typescript/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": "off",
        "no-mixed-requires": "off"
    },
    "ignorePatterns": [
        "*.console.js"
    ]
}